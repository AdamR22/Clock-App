<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_gravity="center_horizontal|start"
    android:weightSum="3">

    <ImageView
        android:contentDescription="@string/notification_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_notifications_active_black"/>

    <TextView
        android:id="@+id/tv_ringtone_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/poppins"
        android:textSize="16sp"
        android:layout_gravity="center_vertical"
        android:textColor="@color/black"
        tools:text="Some Title"/>

    <ImageView
        android:id="@+id/chosen_sound"
        android:contentDescription="@string/chosen_value_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_radio_button_checked_black"/>

</LinearLayout>